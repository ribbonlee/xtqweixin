.line-css {
  height: 1px;
  background: rgb(181, 186, 193);
  margin: 0 20rpx;
}

page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  font-size: 16px;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.success{
  color: rgb(27, 130, 209);
}
.navbar .item.success:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: rgb(27, 130, 209);
}
.navbar .item.fail{
  color: rgb(255, 0, 0);
}
.navbar .item.fail:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: rgb(255, 0, 0);
}