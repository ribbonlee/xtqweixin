.user-contont {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 40%;
    margin: 40rpx
}
.user-name {
    width: 500rpx;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
}
.user-name image {
    height: 150rpx;
    width: 150rpx;
    margin-bottom: 50rpx;
    border-radius:50%;
    border:2rpx solid #eee;
}
.user-name  text {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
}
.moeny {
    margin-top: 50rpx;
    padding: 0 50rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.moeny view{
    height: 100rpx;
    width: 170rpx;
    border:2px solid #ccc;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
    border-radius: 15rpx;
    font-size: 25rpx;
    color: #333;
    /* font-weight: bold; */
}
.moeny view.action{
    color: rgb(27,130,209);
    border-color: rgb(27,130,209);
}
.other {
    color: #1679f3;
    font-size: 32rpx;
    display: flex;
    justify-content: center;
    padding-top: 50rpx;
}
.mask-back {
    height: 100%;
    width: 100%;
    background: #000;
    opacity: 0.6;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
}
.mask-text {
    height: 400rpx;
    width:75%;
    background-color: #fff;
    position: fixed;
    top:0;
    right: 0;
    left: 0;
    bottom: 0;
    margin: auto;
    z-index: 2;
    border-radius: 20rpx;
}
.title {
    padding: 20rpx 0;
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid #ccc;
}
.title image {
    height: 45rpx;
    width: 45rpx;
    position: absolute;
    top: 20rpx;
    left: 15rpx;
}
.title text {
    font-size: 36rpx;
}
.txmoeny {
    position: relative;
    display:flex;
    height: 80rpx;
    margin: 50rpx 30rpx;
    border:1px solid #ccc;
    padding: 0 15rpx;
}
.txmoeny  text {
  display: flex;
  align-items: center;
  font-size: 28rpx;

}
.txmoeny input {
    flex: 1;
    height: 100%;
}
.sumbtn {
    height: 80rpx;
    padding: 0 30rpx;
}
.sumbtn button {
    background-color: rgb(27,130,209);
    color: #fff;
}
.smreward {
    height: 90rpx;
    width: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    margin: 0 auto;
    background-color: rgb(27,130,209);
    border-radius: 15rpx;
    margin-top: 50rpx;
    font-size: 38rpx;
}

@keyframes kf-marque-animation {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-33.3%);
  }
}

page {
  height: 100%;
  overflow: hidden;
}

.container {
  height: 100%;
  overflow: hidden;
}

.header {
  width: 100%;
  position: relative;
  color: #000;
  transition: all 0.6s ease-in-out;
}

.header.hidden {
  transform: translate3d(0, -290rpx, 0);
  margin-top: -130rpx;
}

.header .sell-status{
  position: absolute;
  right: 175rpx;
  top: 0rpx;
  width: 200rpx;
  height: 135rpx;
}

.header .shop-Info {
  position: relative;
  width: 100%;
  height: 300rpx;
  /* margin: 25rpx 0rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header .shop-Info .logo {
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 50%;
  border: 3rpx solid #eee;
}

