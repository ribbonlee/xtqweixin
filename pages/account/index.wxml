<view class="container">
  <view class='userbox' style='background: -webkit-linear-gradient(top, rgba(27,130,209, 1), rgba(27,130,209, 0))'>
    <view class="userinfo">
      <view class="logo">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <view class='userinfo-text'>
        <view class="nickname">
          <open-data type="userNickName"></open-data>
        </view>
      </view>
    </view>
  </view>
  <view class='h-contents'>
    <!-- 余额 -->
    <view class='a-item'>
      <wxc-icon type='yen' size='{{iconSize-10}}' color='#666666' style='margin:15rpx 0 10rpx 0;'></wxc-icon>
      <view class='my'>
        余额:
        <view style='padding: 0 10rpx;color: #666666;font-weight: bold;'> {{balance}}</view>
      </view>
    </view>
    <!-- 剩余可用次数 -->
    <view class='a-item'>
      <wxc-icon type='after-sales' size='{{iconSize-10}}' color='#666666' style='margin:15rpx 0 10rpx 0;'></wxc-icon>
      <view class='my'>
        剩余次数:
        <view style='padding:0 10rpx;color: #69C3AA;font-weight: bold;'>{{balance*10}}</view>
      </view>
    </view>
    <view class='a-item'>
      <wxc-icon type='edit' size='{{iconSize-10}}' color='#666666' style='margin:15rpx 0 10rpx 0;'></wxc-icon>
      <view class='my'>
        积分:
        <view style='padding: 0 10rpx;color: #FF5777;font-weight: bold;'>0 </view>
      </view>
    </view>
    </view>
  <i-cell-group>
    <i-cell title="充值" is-link url="/pages/charge/index"></i-cell>
    <i-cell title="服务商测试" is-link url="/pages/fwstest/index"></i-cell>
    <i-cell title="资费标准" value="0.1元/次"></i-cell>
    <i-cell title="完善信息" is-link url="/pages/info/index"></i-cell>
    <i-cell title="查看凭证" is-link url="/pages/voucher/index"></i-cell>
  </i-cell-group>
</view>