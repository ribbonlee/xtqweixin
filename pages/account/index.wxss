@keyframes kf-marque-animation {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-33.3%);
  }
}

page {
  height: 100%;
  overflow: hidden;
}

.container {
  height: 100%;
  overflow: hidden;
}

.header {
  width: 100%;
  position: relative;
  color: #000;
  transition: all 0.6s ease-in-out;
}

.header.hidden {
  transform: translate3d(0, -290rpx, 0);
  margin-top: -130rpx;
}

.header .sell-status{
  position: absolute;
  right: 175rpx;
  top: 0rpx;
  width: 200rpx;
  height: 135rpx;
}

.header .shop-Info {
  position: relative;
  width: 100%;
  height: 400rpx;
  /* margin: 25rpx 0rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header .shop-Info .logo {
  display: block;
  overflow:hidden; 
  width: 150rpx;
  height: 150rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 50%;
  border: 3rpx solid #eee;
}
.header .shop-Info .nickname {
  margin: auto 20rpx;
  font-size: 14px;
  font-weight: 500;
}

.h-contents{
  z-index: 100;
  width: 100%;
  height: 125rpx;
  margin-bottom: 20rpx;
  background-color: #FFF;
  display: flex;
  flex-direction: row;

}

.h-contents .a-item{
  width: 33%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #333;
}


.h-contents .a-item .my{
  display: flex;
  flex-direction: row;
}

.h-contents .a-item-no-right-border{
  width: 19%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #333;
}

.userbox {
  overflow: hidden;
  display: flex;
	flex-direction: column;
  width: 100%;
  height: 400rpx;
  align-items: center;
  justify-content: center;
}
.userbox .userinfo {
	display: flex;
	flex-direction: column;
  width: 750rpx;
  z-index: 100;
  /* margin-top: 100rpx; */
	align-items: center;
  justify-content: center;
}

.userbox .userinfo .logo {
  display: block;
  overflow:hidden; 
  width: 150rpx;
  height: 150rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 50%;
  border: 3rpx solid #eee;
}

.userbox .userinfo .userinfo-avatar {
  display: block;
	width: 160rpx;
	height: 160rpx;
  margin: 20rpx 0;
  border: 5rpx solid #eee;
  border-radius: 50%;
}

.userbox .userinfo .userinfo-avatar-no {
  display: block;
	width: 160rpx;
	height: 160rpx;
  margin: 20rpx 0;
  border: 5rpx solid #eee;
  border-radius: 5%;
}

.userbox .userinfo .userinfo-text{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top:10rpx;

}

.userbox .userinfo .userinfo-text .nickname {
  font-size: 28rpx;
  /* font-weight: bold; */
  color: #333;
}

.userbox .userInfoMask{
  width: 100%;
  height: 350rpx;
  z-index: 1;
  position: relative;
  bottom: 0rpx;
  border-top-left-radius: 70%;
  border-top-right-radius: 70%;
  background-color: #FFF;
}